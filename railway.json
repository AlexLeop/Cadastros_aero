{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "restartPolicy": "on-failure",
    "numReplicas": 1,
    "healthcheckPath": "/",
    "healthcheckPort": 8001,
    "healthcheckTimeout": 3,
    "env": [
      {
        "name": "HEALTH_PORT",
        "value": "8001"
      }
    ]
  }
} 